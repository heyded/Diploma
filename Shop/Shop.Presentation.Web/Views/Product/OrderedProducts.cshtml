    @model List<Product>

<div class="header">
    <h1>Цена: @Model.Sum(x => x.Price).ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-US")) </h1>
   
</div>
<div class="horizontal-center">
    <a href="/Product/PayOrderedProducts" class="btn btn-success mr-1 mb-1">Купить</a>
    <a href="/Category/GetAll" class="btn btn-danger ml-1 mb-1">Назад</a>
</div>
<div class="grid-items">
    @{
        foreach (var product in Model)
        {
            <div class="card border-secondary col-sm-3 mr-1 ml-2 mb-1" style="max-width: 19rem;">
                <div class="card-body pb-0">
                    <h5 class="card-title">@product.Name</h5>

                    <img class="img-thumbnail default-img-size" style="max-height: 10rem;"
                         src="@product.ImagePath"
                         alt="@product.Name"
                         asp-append-version="true" />

                </div>
                <div class="card-body">
                    <p>@product.Description</p>

                    <div class="edge-pressed">
                        <div class="horizontal-items">
                            <p class="ml-2">@product.Price.ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</p>
                        </div>

                        <div>
                            <a href="/Product/DeleteOrderedProduct?ProductId=@product.Id"
                               class="btn btn-danger">🧺</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
